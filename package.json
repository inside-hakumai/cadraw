{
  "name": "cadraw",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app/web",
    "app/figma",
    "core"
  ],
  "scripts": {
    "postinstall": "husky install",
    "web:dev": "yarn workspace cadraw-web run dev",
    "web:build": "yarn workspace cadraw-web run build",
    "web:start": "yarn workspace cadraw-web run start",
    "web:lint": "yarn workspace cadraw-web run lint",
    "figma:dev": "yarn workspace cadraw-figma run dev",
    "figma:build": "yarn workspace cadraw-figma run build",
    "all:build": "run-s web:build figma:build",
    "all:eslint": "npx eslint --fix . --ext .ts --ext .tsx",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@emotion/babel-plugin": "^11.9.2",
    "@emotion/react": "^11.9.0",
    "@figma/plugin-typings": "^1.45.0",
    "@types/node": "^17.0.35",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "html-inline-script-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "packageManager": "yarn@3.2.1",
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
